<!DOCTYPE html>
<html>
<head>
<style>
    
  .tabs input[type=radio] {
    position: absolute;
     top: -9999px;
    left: -9999px;
}

.tabs {
    width: 100%;
    list-style: none;
    position: relative;
}

.tabs li{
    float: left;
}

.tabs label {
    display: block;
    padding: 10px 20px;
    color: pink;
    font-size: 2em;
    position: relative;
}

.tab:checked + label {
    background: pink;
    color: white
}

.tab:checked ~ .tab-content {
    display: block;
}
.tab-content{
    z-index: 2;
    display: none;
    width: 100%;
    height: 5em;
    background: pink;
    color: white;
    position: absolute;
    left: 0;
    padding: 1em;
    font-size: 1.5em;
}

</style>
</head>
<body>
    <ul class="tabs">
        <li>
            <input type="radio" checked name="tabs" id="tab1" class="tab">
            <label for="tab1">tab 1</label>
            <div id="tab-content1" class="tab-content">
                aaaaaaaaaaaaaaaaaaaa
            </div>
        </li>
        <li>
            <input type="radio" name="tabs" id="tab2" class="tab">
            <label for="tab2">tab 2</label>
            <div id="tab-content2" class="tab-content">
                fdfdasfdsafasfsf
            </div>
        </li>
        <li>
            <input type="radio" name="tabs" id="tab3" class="tab">
            <label for="tab3">tab 3</label>
            <div id="tab-content3" class="tab-content">
                4253453252353254235342
            </div>
        </li>
    </ul>
</body>
<html>
